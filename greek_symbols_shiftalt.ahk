; ---------------------- Greek Symbols ----------------------

; Press Alt + Shift + S to type the Greek letter sigma (σ)
+!s::
    Send, {U+03C3}  ; Unicode for the sigma symbol (σ)
return

; Press Alt + Shift + T to type the Greek letter tau (τ)
+!t::
    Send, {U+03C4}  ; Unicode for the tau symbol (τ)
return

; Press Alt + Shift + N to type the Greek letter eta (η)
+!n::
    Send, {U+03B7}  ; Unicode for the eta symbol (η)
return

; Press Alt + Shift + C + B to type the Greek letter theta (θ)
+!SC00B::
    Send, {U+03B8}  ; Unicode for the theta symbol (θ)
return

; Press Alt + Shift + A to type the Greek letter alpha (α)
+!a::
    Send, {U+03B1}  ; Unicode for the alpha symbol (α)
return
